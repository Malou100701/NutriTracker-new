<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <header><%- include('../partials/headerLoggedin'); %></header>
    <div class="container">
      <div class="content">
        <div class="box">
          <h1>Meal Tracker</h1>
          <p>Log dine yndlings måltider!</p>
          <form action="/mealtracker/trackMeal" method="POST">
            <div class="labelPair">
              <select name="MealID" id="MealID">
                <% meals.forEach(function(meal) { %>
                <option value="<%= meal.ID %>"><%= meal.Name %></option>
                <% }); %>
              </select>
            </div>
            <div class="labelPair">
              <label for="Amount"
                >Hvor meget af dette måltid spiste du? (Gram)</label
              >
              <input type="number" name="Amount" id="Amount" />
            </div>
            <div class="labelPair">
              <label for="DateTime">Tidspunkt</label>
              <input type="datetime-local" name="DateTime" id="DateTime" />
            </div>

            <!-- hidden fields for geolocation -->
            <input type="hidden" name="latitude" id="latitude" />
            <input type="hidden" name="longitude" id="longitude" />

            <button type="submit">Log Meal</button>
          </form>
        </div>
        <div class="box">
          <h2>Log en enkelt ingrediens</h2>

          <form action= "/inspector/ingredientView?ingredient" method="GET"> <!--query parameter efter URL -->
            <label for="ingredient">Vælg ingrediens</label>
            <input type="text" id="autocomplete_search" name="ingredient" class="form-control form-control-lg" placeholder="Indtast ingrediens" />
            <span id="search_result"> </span>
            <button type="submit">Log Ingrediens</button>
        </form>

        </div>



        
      </div>

      <div class="content">
        <div class="box">
          <h2>Registrér vand</h2>
          <p>Log din vand!</p>
          <form action="/mealtracker/water" method="POST">
            <div class="labelPair"></div>
            <div class="labelPair">
              <label for="Amount">Hvor meget vand drak du?</label>
              <input type="number" name="Amount" id="Amount" />
            </div>
            <div class="labelPair">
              <label for="DateTime">Tidspunkt</label>
              <input type="datetime-local" name="DateTime" id="DateTime" />
            </div>

            <!-- hidden fields for geolocation -->
            <input type="hidden" name="latitude" id="latitude" />
            <input type="hidden" name="longitude" id="longitude" />

            <button type="submit">Log Vand</button>
          </form>
        </div>
      </div>

      <div class="content">
        <div class="box">
          <h2>List of Meals</h2>
          <table>
            <thead>
              <tr>
                <th>Meal Name</th>
                <th>Date and Time</th>
                <th>Amount Consumed</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% intakes.forEach(intake => { %>
              <tr>
                <form method="POST" action="/mealtracker/update">
                  <input
                    type="hidden"
                    name="IntakeID"
                    value="<%= intake.IntakeID %>"
                  />
                  <td><%= intake.Name %></td>
                  <td>
                    <input
                      type="datetime-local"
                      name="DateTime"
                      value="<%= new Date(intake.DateTime).toISOString().slice(0,16) %>"
                    />
                  </td>
                  <td>
                    <input
                      type="number"
                      name="Amount"
                      value="<%= intake.Amount %>"
                    />
                  </td>
                  <td><button type="submit">Update</button></td>
                </form>
                <form method="POST" action="/mealtracker/delete">
                  <input type="hidden" name="_method" value="DELETE" />
                  <input type="hidden" name="IntakeID" value="<%= intake.IntakeID %>" />
                  <td><button type="submit" class="delete">Delete</button></td>
                </form>

              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <footer><%- include('../partials/footer'); %></footer>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        if (navigator.geolocation) {
          navigator.geolocation.getCurrentPosition(
            function (position) {
              document.getElementById("latitude").value =
                position.coords.latitude;
              document.getElementById("longitude").value =
                position.coords.longitude;
            },
            function (error) {
              console.error("Geolocation error: " + error.message);
            }
          );
        } else {
          console.error("Geolocation is not supported by this browser.");
        }
      });
    </script>
  </body>
</html>

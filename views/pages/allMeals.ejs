<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %> 
</head>
<body>
    <header><%- include('../partials/headerLoggedin'); %></header>
    <div class="container">
        <h1>Alle Måltider</h1>
        <table>
            <thead>
                <tr>
                    <th>Navn</th>
                    <th>Antal Kalorier</th>
                    <th>Protein</th>
                    <th>Fedt</th>
                    <th>Fiber</th>
                    <th>Antal Ingredienser</th>
                    <th>Tilføj ingrediens</th>
                </tr>
            </thead>
            <tbody>
                <% meals.forEach(meal => { %>
                    <tr>
                        <td><%= meal.Name %></td> <!-- Correct the property name to match the actual property -->
                            <!-- Display other meal properties as needed -->
                            <td>
                                <!-- Add a form for adding ingredients -->
                                <form action="/mealIngredient" method="POST">
                                    <input type="hidden" name="mealID" value="<%= meal.ID %>">
                                    <input type="text" name="ingredientName" placeholder="Søg efter ingrediens">
                                    <button type="submit">Tilføj</button>
                                </form>
                            </td>
                    </tr>
                <% }); %>

            </tbody>
        </table>
    </div>
    
    <footer><%- include('../partials/footer'); %></footer>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
<body>
    <header><%- include('../partials/headerLoggedin'); %></header>


    <div class="container">
      <div class="content">
        <div class="box">
          <h1>Timevisning af Nutri Tracker</h1>
          <p>Se dit kalorie overskud/underskud over dagen</p>
          <!-- Link to the view page -->
          <a href="/nutritracker" class="button-link"><button>Månedvis</button></a>
          <div class="tracker">
            <table>
              <thead>
                <tr>
                    <th>Time</th>
                    <th>Kcalorie indtag</th>
                    <th>Kcalorier forbrændt</th>
                    <th>Kcalorie balance</th>
                    <th>Vand indtaget</th>

                </tr>
              </thead>
              <tbody>
                    <% hourlyData.forEach(function(data) { %>
                        <tr>
                            <td><%= data.hour %>:00</td>
                            <td><%= Math.round(data.intake) %> kcal</td>
                            <td><%= Math.round(data.burned) %> kcal</td>
                            <td><%= Math.round(data.balance) %> kcal</td>
                            <td><%= data.totalWater %></td>
                        </tr>
                    <% }); %>
              </tbody>
            </table>
          </div>
        </div>
        </div>
      </div>
    </div>
    <footer><%- include('../partials/footer'); %></footer>
</body>
</html>
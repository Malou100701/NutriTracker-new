<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Denne inkluderer head.ejs filen, som indeholder metadata og links til stylesheets -->
  <%- include('../partials/head'); %>
</head>

<body>
    <header><%- include('../partials/headerLoggedin'); %></header>
    <div class="container">
      <div class="content">
        <div class="box">
          <h1>Aktivitets Tracker</h1>
          <p>
            Registrer din aktivitet!
          </p>
          <form action="/activitytracker/logActivity" method="POST">

            <div class="labelPair">
              <select name="activityTypeID" id="activityTypeID">
                  <% activities.forEach(function(activity) { %>
                      <option value="<%= activity.ActivityTypeID %>"><%= activity.ActivityName %></option>
                  <% }); %>
              </select>
            </div>
            <div class="labelPair">
              <label for="duration">Hvor lang tid tr√¶nede du? (Minutter)</label>
              <input
                type="number"
                name="duration"
                id="duration"
      
              />
            </div>
            <div class="labelPair">
              <label for="dateTime">Tidspunkt</label>
              <input
                type="datetime-local"
                name="dateTime"
                id="dateTime">
            </div>
            <button type="submit">Registrer Aktivitet</button>
          </form>
        </div>

      <div class="box">
        <img src="/images/start.png" alt="start image" />
      </div>
    </div>
  </div>
</body>
<footer><%- include('../partials/footer'); %></footer>

</html>